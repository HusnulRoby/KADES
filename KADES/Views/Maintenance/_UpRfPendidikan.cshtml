@using KADES.Models.Maintenance;
@model RfPendidikan




<div class="modal fade" id="upPendidikan-@Model.ID">
    <div class="mdl_new modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Modal Heading</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                @*<div class="login_form">*@
                <form asp-action="UpPendidikan" method="POST">
                    <fieldset>
                        <input id="ID" asp-for="@Model.ID" hidden />
                        <div class="field_form">
                                <label class="label_field">Pendidikan</label>
                                <input id="PENDIDIKAN" asp-for="PENDIDIKAN" type="text" class="form-control form-control-user" />
                             </div>

                            <div class="field_form">
                                <label class="label_field">Active</label>
                                <input id="ACTIVE" asp-for="ACTIVE" type="checkbox" class="form-control-user" />
                            </div>
                    </fieldset>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Save</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </form>

                @*</div>*@
                <!-- Modal footer -->
            </div>
        </div>
    </div>
    <!-- end model popup -->
</div>