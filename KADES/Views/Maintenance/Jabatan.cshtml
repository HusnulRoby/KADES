@using KADES.Models.Maintenance;
@{
    ViewData["Title"] = "Maintenance Paramter";

}

@model MaintenanceModels;


<div class="container-fluid">
    <div class="row column_title">
        <div class="col-md-12">
            <div class="page_title">
                <h2>@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <!-- row -->
    <div class="row">
        <!-- table section -->
        <div class="col-md-12">
            <div class="white_shd full margin_bottom_30">
                <div class="full graph_head">
                    <div class="heading1 margin_0">
                        <h2>Maintenance Jabatan</h2>
                        <span class="plus_green_bt_add"><a data-toggle="modal" data-target="#myModal">+</a></span>

                    </div>

                </div>
                <div class="table_section padding_infor_info">
                    <div class="table-responsive-sm">
                        <table id="dataTable" class="table" style="width:100%">
                            <thead class="thead-light" style="text-align:center">
                                <tr>
                                    <th>#</th>
                                    <th>Jabatan</th>
                                    <th>Tipe Jabatan</th>
                                    <th>Status</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListRFJabatan)
                                {
                                    <tr>
                                        <td>
                                           <div class="btn-group">

                                                <form asp-action="DelRFJabatan" asp-route-id="@item.KODE_JABATAN" id="DelRFJabatan" method="post">
                                                    @*<input type="button" class="btn btn-sm  cur-p btn-outline-info" data-toggle="modal" data-target="@("#upKegPKK-"+item.ID)" data-url="@Url.Action($"upKegPKK/{item.ID}")" value="Update" />*@
                                                    <input type="button" class="btn btn-sm  cur-p btn-outline-secondary" value="Delete" onclick="Delete()" />
                                                </form>
                                            </div>
                                            @*@await Html.PartialAsync("_UpRFJabatan",item)*@
                                        </td>
                                        @*<td style="display:none">@item.KODE_JABATAN</td>*@
                                        <td>@item.JABATAN</td>
                                        
                                        <td>@item.KODE_TYPE</td>
                                        <td>
                                            @{
                                                var STATUS = "";
                                                if (item.ACTIVE)
                                                {
                                                    STATUS = "Active";

                                                }
                                                else
                                                {
                                                    STATUS = "Non Active";
                                                }
                                                @STATUS
                                                ;
                                            }
                                        </td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- model popup -->
    <!-- The Modal -->
    <div class="modal fade" id="myModal">
        <div class="mdl_new modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Modal Heading</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    @*<div class="login_form">*@
                    <form asp-action="AddJabatan" method="POST">
                        <fieldset>
                           @* <div class="row">
                                <div class="col-sm-6">*@
                                    <div class="field_form">
                                        <label class="label_field">Kode Jabatan</label>
                                        <input id="KODE_JABATAN" asp-for="@Model.RFJabatan.KODE_JABATAN" type="text" class="form-control form-control-user" />
                                    </div>
                                    <div class="field_form">
                                        <label class="label_field">Jabatan</label>
                                        <input id="JABATAN" asp-for="@Model.RFJabatan.JABATAN" type="text" class="form-control form-control-user" />
                                    </div>
                                    <div class="field_form">
                                        <label class="label_field">Jabatan</label>
                                <input id="KODE_TYPE" asp-for="@Model.RFJabatan.KODE_TYPE" type="text" class="form-control form-control-user" />
                                    </div>
                                @*</div>
                                

                            </div>*@
                        </fieldset>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success">Save</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                    </form>

                    @*</div>*@
                    <!-- Modal footer -->
                </div>
            </div>
        </div>
        <!-- end model popup -->
    </div>

</div>

<script type="text/javascript">

    function Delete() {
        if (window.confirm("Delete This Data?")) {
            $('#DelRFJabatan').submit();
        }

    }

</script>