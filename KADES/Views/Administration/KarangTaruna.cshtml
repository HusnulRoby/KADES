@using KADES.Models.Administrasi;
@{
    ViewData["Title"] = "Administrasi";
    string disabled = "";
}

@model AdministrasiModels;


<div class="container-fluid">
    <div class="row column_title">
        <div class="col-md-12">
            <div class="page_title">
                <h2>@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <!-- row -->
    <div class="row">
        <!-- table section -->
        <div class="col-md-12">
            <div class="white_shd full margin_bottom_30">
                <div class="full graph_head">
                    <div class="heading1 margin_0">
                        <h2>Buku Anggota Karang Taruna</h2>
                        <span class="plus_green_bt_exp"><a class="fa fa-download" style="font-size:15px" asp-controller="Administration" asp-action="DownloadExcelTaruna" asp-route-PERIODFROM="@Model.AdmSearchBydate.PERIODFROM" asp-route-PERIODTO="@Model.AdmSearchBydate.PERIODTO"></a></span>
                        <span class="plus_green_bt_add"><a data-toggle="modal" data-target="#myModal">+</a></span>

                    </div>

                </div>
                <div class="table_section padding_infor_info">
                    <div class="box-body">
                        <div id="divSearchList" class="table-responsive">
                            <div class="divRectangle" id="rectangle" style="width:50%">
                                <form method="get" action="@Url.Action("KarangTaruna", "Administration")">
                                    <div class="form-group row top-buffer">
                                        <label class="control-label col-sm-5">Tanggal Pengangkatan</label>
                                        <div class="col-6">
                                            <input type="date" id="PERIODFROM" class="form-control form-control-sm form-control-user" asp-for="@Model.AdmSearchBydate.PERIODFROM" />
                                            <span>To</span>
                                            <input type="date" id="PERIODTO" class="form-control form-control-sm form-control-user" asp-for="@Model.AdmSearchBydate.PERIODTO" />
                                        </div>
                                    </div>

                                    <div class="MenuSearch" style="text-align:center;padding-top:12px">
                                        <button class="btn btn-sm btn-sm btn-outline-info" type="submit"><i class="glyphicon glyphicon-search"></i> <span>Search</span></button> <span></span>
                                        <button class="btn btn-sm btn-sm btn-outline-warning" onclick="clearSearch()" type="button"><i class="glyphicon glyphicon-refresh"></i>  <span>Clear</span></button> <span></span>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    </br>
                    </br>
                    </br>
                    <div class="table-responsive-sm">
                        <table id="dataTable" class="table" style="width:100%">
                            <thead class="thead-light" style="text-align:center">
                                <tr>
                                    <th>Action</th>
                                    <th>Nama</th>
                                    <th>Jenis Kelamin</th>
                                    <th>Jabatan</th>
                                    <th>No Telp</th>
                                    <th>Alamat</th>
                                    <th>Tanggal Pengangkatan</th>
                                    <th>Tanggal Pemberhentian</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListVW_KarangTaruna)
                                {
                                    <tr>
                                        <td>
                                            <div>

                                                <input type="button" class="btn btn-sm btn-sm  cur-p btn-outline-info" data-toggle="modal" data-target="@("#updateTaruna-"+item.ID)" data-url="@Url.Action($"UpdateTaruna/{item.ID}")" value="Update" />
                                                @{
                                                    disabled = "";
                                                    if (!string.IsNullOrEmpty(item.SK_BERHENTI))
                                                    {
                                                        disabled = "disabled";
                                                    }
                                                }
                                                <input type="button" class="btn btn-sm btn-sm  cur-p btn-outline-secondary" data-toggle="modal" data-target="@("#inactiveTaruna-"+item.ID)" data-url="@Url.Action($"InactiveTaruna/{item.ID}")" value="Inactive" @disabled/>

                                            </div>
                                            @await Html.PartialAsync("_UpdateTaruna",item)
                                            @await Html.PartialAsync("_InactiveTaruna",item)
                                        </td>
                                        @*<td style="display:none">@item.KODE_JABATAN</td>*@
                                        <td>@item.NAMA</td>
                                        <td>
                                            @{
                                                var JENIS_KELAMIN = "";
                                                if (item.JENIS_KELAMIN.Equals('L'))
                                                {
                                                    JENIS_KELAMIN = "Laki - Laki";
                                                    @JENIS_KELAMIN
                                                    ;

                                                }
                                                else
                                                {
                                                    JENIS_KELAMIN = "Perempuan";
                                                    @JENIS_KELAMIN
                                                    ;
                                                }
                                            }
                                        </td>
                                        <td>@item.JABATAN</td>
                                        <td>@item.NO_TELP</td>
                                        <td>@item.ALAMAT</td>
                                        <td>@item.TGL_PENGANGKATAN.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @{
                                                var TGL_BERHENTI = item.TGL_PEMBERHENTIAN;
                                                string TEXT = "-";

                                                if (TGL_BERHENTI != null)
                                                {
                                                    @string.Format("{0:dd/MM/yyyy}", Convert.ToDateTime(TGL_BERHENTI))
                                                    ;
                                                }
                                                else
                                                {
                                                    @TEXT
                                                    ;
                                                }
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- model popup -->
    <!-- The Modal -->
    <div class="modal fade" id="myModal">
        <div class="mdl_new modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Tambah Data</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    @*<div class="login_form">*@
                    <form asp-action="AddTaruna" method="POST">
                        <fieldset>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="field_form">
                                        <label class="label_field  control-label">Jabatan</label>
                                        <select class="form-control form-control-sm form-control-user" asp-items="@ViewBag.ddlJabatan" asp-for="@Model.KarangTaruna.KODE_JABATAN"></select>
                                    </div>
                                    <div class="field_form">
                                        <label class="label_field  control-label">NIK</label>
                                        <input id="NIK" asp-for="@Model.KarangTaruna.NIK" type="number" class="form-control form-control-sm form-control-user" required />
                                    </div>
                                    <div class="field_form">
                                        <label class="label_field  control-label">No. SK Pengangkatan</label>
                                        <input id="SK" asp-for="@Model.KarangTaruna.SK" type="text" class="form-control form-control-sm form-control-user" required />
                                    </div>
                                    <div class="field_form">
                                        <label class="label_field  control-label">Nama</label>
                                        <input id="NAMA" asp-for="@Model.KarangTaruna.NAMA" type="text" class="form-control form-control-sm form-control-user" required />
                                    </div>
                                    <div class="field_form">
                                        <label class="label_field  control-label">Jenis Kelamin</label>
                                        <select class="form-control form-control-sm form-control-user" asp-items="@ViewBag.ddlJK" asp-for="@Model.KarangTaruna.JENIS_KELAMIN"></select>
                                    </div>
                                    
                                </div>
                                <div class="col-sm-6">
                                    <div class="field_form">
                                        <label class="label_field  control-label">No Telp</label>
                                        <input id="NO_TELP" asp-for="@Model.KarangTaruna.NO_TELP" type="text" class="form-control form-control-sm form-control-user" required />
                                    </div>
                                    <div class="field_form">
                                        <label class="label_field  control-label">Alamat</label>
                                        <textarea id="ALAMAT" style="height:100px;margin-bottom:10px" class="form-control form-control-sm form-control-user" asp-for="@Model.KarangTaruna.ALAMAT" required></textarea>
                                    </div>


                                    <div class="field_form">
                                        <label class="label_field  control-label">Tanggal Pengangkatan</label>
                                        <input type="date" asp-for="@Model.KarangTaruna.TGL_PENGANGKATAN" class="form-control form-control-sm form-control-user" required />
                                    </div>

                                </div>

                            </div>
                        </fieldset>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-sm btn-success">Save</button>
                            <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
                        </div>
                    </form>

                    @*</div>*@
                    <!-- Modal footer -->
                </div>
            </div>
        </div>
        <!-- end model popup -->
    </div>

</div>

<script type="text/javascript">
    function clearSearch() {
        ClearDataInDIV("divSearchList");
    }
</script>

