@using KADES.Models.Administrasi;
@model VW_Penduduk


<div class="modal fade" id="updatePenduduk-@Model.ID">
    <div class="mdl_new modal-dialog" style="max-width:80%">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Update Data</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                @*<div class="login_form">*@
                <form asp-action="UpdatePenduduk" method="POST">
                    <fieldset>
                        <input id="ID" asp-for="ID" hidden />

                        <div class="row">
                            <div class="col-sm-4">
                                <div class="field_form">
                                    <label class="label_field  control-label">No. KK</label>
                                    <input id="KK" asp-for="KK" type="number" maxlength="16" class="form-control form-control-sm form-control-user" required />
                                </div>
                                <div class="field_form">
                                    <label class="label_field  control-label">NIK</label>
                                    <input id="NIK" asp-for="NIK" type="number" maxlength="16" class="form-control form-control-sm form-control-user" required />
                                </div>
                                <div class="field_form">
                                    <label class="label_field  control-label">Nama</label>
                                    <input id="NAMA" asp-for="NAMA" type="text" class="form-control form-control-sm form-control-user" required />
                                </div>

                                <div class="field_form">
                                    <label class="label_field  control-label">Jenis Kelamin</label>
                                    <select class="form-control form-control-sm form-control-user" asp-items="@ViewBag.ddlJK" asp-for="JENIS_KELAMIN"></select>
                                </div>

                                <div class="field_form">
                                    <label class="label_field  control-label">Hubungan Dalam Keluarga</label>
                                    <select class="form-control form-control-sm form-control-user" asp-items="@ViewBag.ddlDlmKeluarga" asp-for="ID_DLMKELUARGA"></select>
                                </div>

                                <div class="field_form">
                                    <label class="label_field  control-label">No Telp</label>
                                    <input id="NO_TELP" asp-for="NO_TELP" type="text" class="form-control form-control-sm form-control-user" required />
                                </div>

                            </div>

                            <div class="col-sm-4">


                                <div class="field_form">
                                    <label class="label_field  control-label">No. Akta Kelahiran</label>
                                    <input id="AKTA" asp-for="NO_AKTA" type="number" maxlength="16" class="form-control form-control-sm form-control-user" />
                                </div>

                                <div class="field_form">
                                    <label class="label_field  control-label">Tempat Lahir</label>
                                    <input id="POB" asp-for="POB" type="text" class="form-control form-control-sm form-control-user" required />
                                </div>

                                <div class="field_form">
                                    <label class="label_field  control-label">Tanggal Lahir</label>
                                    <input type="date" asp-for="DOB" class="form-control form-control-sm form-control-user" required />
                                </div>

                                <div class="field_form">
                                    <label class="label_field  control-label">Kampung</label>
                                    <select class="form-control form-control-sm form-control-user" asp-items="@ViewBag.ddlDusun" asp-for="ID_DUSUN"></select>
                                </div>
                                <div class="field_form">
                                    <label class="label_field  control-label">RT</label>
                                    <input id="RT" asp-for="RT" type="number" class="form-control form-control-sm form-control-user" required />
                                </div>
                                <div class="field_form">
                                    <label class="label_field  control-label">RW</label>
                                    <input id="RW" asp-for="RW" type="number" class="form-control form-control-sm form-control-user" required />
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="field_form">
                                    <label class="label_field  control-label">Agama</label>
                                    <select class="form-control form-control-sm form-control-user" asp-items="@ViewBag.ddlAgama" asp-for="ID_AGAMA"></select>
                                </div>
                                <div class="field_form">
                                    <label class="label_field  control-label">Status Perkawinan</label>
                                    <select class="form-control form-control-sm form-control-user" asp-items="@ViewBag.ddlStatusKawin" asp-for="ID_KAWIN"></select>
                                </div>

                                <div class="field_form">
                                    <label class="label_field  control-label">Pendidikan</label>
                                    <select class="form-control form-control-sm form-control-user" asp-items="@ViewBag.ddlRfPendidikan" asp-for="ID_PENDIDIKAN"></select>
                                </div>
                                <div class="field_form">
                                    <label class="label_field  control-label">Pekerjaan</label>
                                    <select class="form-control form-control-sm form-control-user" asp-items="@ViewBag.ddlRfPekerjaan" asp-for="ID_PEKERJAAN"></select>
                                </div>
                                <div class="field_form">
                                    <label class="label_field  control-label">Nama Ayah</label>
                                    <input id="AYAH" asp-for="NAMA_AYAH" type="text" class="form-control form-control-sm form-control-user" />
                                </div>
                                <div class="field_form">
                                    <label class="label_field  control-label">Nama Ibu</label>
                                    <input id="IBU" asp-for="NAMA_IBU" type="text" class="form-control form-control-sm form-control-user" />
                                </div>

                            </div>
                        </div>
                    </fieldset>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-sm btn-success">Save</button>
                        <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </form>

                @*</div>*@
                <!-- Modal footer -->
            </div>
        </div>
    </div>
    <!-- end model popup -->
</div>