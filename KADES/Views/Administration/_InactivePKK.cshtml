@using KADES.Models.Administrasi;
@model VW_PKK


<div class="modal fade" id="inactivePKK-@Model.ID">
    <div class="mdl modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title"></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                @*<div class="login_form">*@
                <form asp-action="InactivePKK" method="POST">
                    <fieldset>
                        <input id="ID" asp-for="ID" type="hidden" />

                        <div class="field_form">
                            <label class="label_field  control-label">Tanggal Berhenti</label>
                            <input type="date" asp-for="TGL_PEMBERHENTIAN" class="form-control form-control-sm form-control-user" />

                        </div>
                    </fieldset>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-sm btn-success">Save</button>
                        <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </form>

                @*</div>*@
                <!-- Modal footer -->
            </div>
        </div>
    </div>
    <!-- end model popup -->
</div>