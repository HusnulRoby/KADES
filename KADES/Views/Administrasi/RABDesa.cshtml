@using KADES.Models.Administrasi;
@model AdministrasiModels;

@{
    ViewData["Title"] = "Administrasi";
}



<div class="container-fluid">
    <div class="row column_title">
        <div class="col-md-12">
            <div class="page_title">
                <h2>@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <!-- row -->
    <div class="row">
        <!-- table section -->
        <div class="col-md-12">
            <div class="white_shd full margin_bottom_30">
                <div class="full graph_head">
                    <div class="heading1 margin_0">
                        <h2>Buku Rencana Anggaran Biaya</h2>
                        <span class="plus_green_bt_add"><a data-toggle="modal" data-target="#myModal">+</a></span>

                    </div>

                </div>
                <div class="table_section padding_infor_info">
                    <div class="table-responsive-sm">
                        <table id="dataTable" class="table" style="width:100%">
                            <thead class="thead-light"  style="text-align:center">
                                <tr>
                                    <th>#</th>
                                    <th>Jenis RAB</th>
                                    <th>Tanggal RAB</th>
                                    <th>Lampiran</th>
                                    <th>Keterangan</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListRAB_DESA)
                                {
                                    <tr>
                                        <td>
                                            <div>

                                                <form asp-action="DeleteRAB" asp-route-id="@item.ID" id="DelRAB" method="post">
                                                    <input type="button" class="btn btn-sm  cur-p btn-outline-info" data-toggle="modal" data-target="@("#updateRAB-"+item.ID)" data-url="@Url.Action($"UpdateRAB/{item.ID}")" value="Update" />
                                                    <input type="button" class="btn btn-sm  cur-p btn-outline-secondary" value="Delete" onclick="DeleteRAB()" />
                                                </form>
                                            </div>
                                            @await Html.PartialAsync("_UpdateRAB",item) 
                                        </td>
                                        <td>@item.JENIS_RAB</td>
                                        <td>@item.TGL_RAB.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <form asp-action="DownloadRAB" asp-route-id="@item.ID" id="DownloadRAB" method="post">
                                                <input type="submit" class="btn btn-sm  cur-p btn-outline-success" value="Download" />
                                            </form>
                                        </td>
                                        <td>@item.KETERANGAN</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- The Modal -->
    <div class="modal fade" id="myModal">
        <div class="mdl modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Modal Heading</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    @*<div class="login_form">*@
                    <form asp-action="AddRABDesa" method="POST" enctype="multipart/form-data">
                        <fieldset>
                            <div class="field_form">
                                <label class="label_field">Jenis RAB</label>
                                <input id="JENIS_RAB" asp-for="@Model.RAB_DESA.JENIS_RAB" type="text" class="form-control form-control-user" />
                            </div>
                            <div class="field_form">
                                <label class="label_field">Tanggal RAB</label>
                                <input type="date" asp-for="@Model.RAB_DESA.TGL_RAB" class="form-control form-control-user" />
                            </div>
                            <div class="field_form">
                                <label class="label_field">Lampiran</label>
                                <input id="FILE_UPLOAD" type="file" asp-for="@Model.RAB_DESA.PATH_FILE" name="FILE_UPLOAD" accept=".doc,.docx" class="form-control form-control-user" multiple />
                            </div>
                            <div class="field_form">
                                <label class="label_field">Keterangan</label>
                                <textarea id="KETERANGAN" style="height:130px" class="form-control form-control-user" asp-for="@Model.RAB_DESA.KETERANGAN"></textarea>
                            </div>
                        </fieldset>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success">Save</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                    </form>

                    @*</div>*@
                    <!-- Modal footer -->
                </div>
            </div>
        </div>
        <!-- end model popup -->
    </div>
</div>

<script type="text/javascript">

    function DeleteRAB() {

        if (window.confirm("Delete This Data?")) {
            $('#DelRAB').submit();
        }

    }



</script>


