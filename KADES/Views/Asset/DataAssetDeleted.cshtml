@using KADES.Models.Asset;
@{
    ViewData["Title"] = "Buku Log Aset Desa";

}

@model AssetModels;


<div class="container-fluid">
    <div class="row column_title">
        <div class="col-md-12">
            <div class="page_title">
                <h2>@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <!-- row -->
    <div class="row">
        <!-- table section -->
        <div class="col-md-12">
            <div class="white_shd full margin_bottom_30">
                <div class="full graph_head">
                    <div class="heading1 margin_0">
                        <h2>Data Aset Dihapus</h2>
                        <span class="plus_green_bt_add"><a class="fa fa-download" style="font-size:15px" asp-controller="Asset" asp-action="DownloadExcelDel" asp-route-PERIODFROM="@Model.searchBydate.PERIODFROM" asp-route-PERIODTO="@Model.searchBydate.PERIODTO" ></a></span>

                        @*<span class="plus_green_bt_add"><a data-toggle="modal" data-target="#myModal">+</a></span>*@

                    </div>

                </div>
                <div class="table_section padding_infor_info">
                    <div class="box-body">
                        <div id="divSearchList" class="table-responsive">
                            <div class="divRectangle" id="rectangle" style="width:50%">
                                <form method="get" action="@Url.Action("DataAssetDeleted", "Asset")">
                                    <div class="form-group row top-buffer">
                                        <label class="control-label col-sm-5">Tanggal Aset Dihapus</label>
                                        <div class="col-6">
                                            <input type="date" id="PERIODFROM" class="form-control form-control-sm form-control-user" asp-for="@Model.searchBydate.PERIODFROM" />
                                                <span>To</span>
                                            <input type="date" id="PERIODTO" class="form-control form-control-sm form-control-user" asp-for="@Model.searchBydate.PERIODTO" />
                                        </div>
                                    </div>

                                    <div class="MenuSearch" style="text-align:center;padding-top:12px">
                                        <button class="btn btn-sm btn-sm btn-outline-info" type="submit"><i class="glyphicon glyphicon-search"></i> <span>Search</span></button> <span></span>
                                        <button class="btn btn-sm btn-sm btn-outline-warning" onclick="clearSearch()" type="button"><i class="glyphicon glyphicon-refresh"></i>  <span>Clear</span></button> <span></span>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    </br>
                    </br>
                    </br>
                    <div class="table-responsive-sm">
                        <table id="dataTable" class="table" style="width:100%">
                            <thead class="thead-light" style="text-align:center">
                                <tr>
                                    <th>Nama Aset</th>
                                    <th>Jenis Aset</th>
                                    <th>Sumber Aset</th>
                                    <th>Kondisi Aset</th>
                                    <th>Lokasi</th>
                                    <th>Nilai Aset</th>
                                    @*<th>Tanggal Masuk</th>*@

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListVW_Aset)
                                {
                                    <tr>
                                        <td>@item.NAMA_ASET</td>
                                        <td>@item.JENIS_ASET</td>
                                        <td>@item.SUMBER_ASET</td>
                                        <td>
                                            @{
                                                string KONDISI = "";
                                                if (item.KODE_KONDISI.Equals("BK"))
                                                {
                                                    KONDISI = "Baik";
                                                }
                                                else if (item.KODE_KONDISI.Equals("RR"))
                                                {
                                                    KONDISI = "Rusak Ringan";
                                                }
                                                else if (item.KODE_KONDISI.Equals("RB"))
                                                {
                                                    KONDISI = "Rusak Berat";
                                                }

                                                @KONDISI;
                                            }
                                        </td>
                                        <td>@item.LOKASI</td>
                                        <td>@item.NILAI_ASET</td>
                                        @*<td>@item.TGL_INPUT.ToString("dd/MM/yyyy")</td>*@

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- model popup -->
    <!-- The Modal -->
   
</div>

<script>  
    function clearSearch(){
        ClearDataInDIV("divSearchList");
    }    
</script>

