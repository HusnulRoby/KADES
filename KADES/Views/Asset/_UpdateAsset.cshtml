@using KADES.Models.Asset;
@model VW_DataAset




<div class="modal fade" id="updateAsset-@Model.ID">
    <div class="mdl_new modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Modal Heading</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                @*<div class="login_form">*@
                <form asp-action="UpAsset" method="POST">
                    <fieldset>
                        <div class="row">
                            <div class="col-sm-6">
                                <input id="ID" asp-for="ID" type="text" class="form-control form-control-user" hidden />

                                <div class="field_form">
                                    <label class="label_field">Name Aset</label>
                                    <input id="NAMA_ASET" asp-for="NAMA_ASET" type="text" class="form-control form-control-user" />
                                </div>
                                <div class="field_form">
                                    <label class="label_field">Jenis Aset</label>
                                    <select class="form-control form-control-user" asp-items="@ViewBag.ddlJnsAset" asp-for="ID_JNSASET"></select>
                                </div>
                                <div class="field_form">
                                    <label class="label_field">Lokasi</label>
                                    <input id="LOKASI" asp-for="LOKASI" type="text" class="form-control form-control-user" />
                                </div>
                                <div class="field_form">
                                    <label class="label_field">Nilai Aset</label>
                                    <input id="NILAI_ASET" asp-for="NILAI_ASET" type="number" class="form-control form-control-user" />
                                </div>
                                <div class="field_form">
                                    <label class="label_field">Tanggal Masuk</label>
                                    <input type="date" asp-for="TGL_INPUT" class="form-control form-control-user" />
                                </div>

                            </div>
                        </div>
                    </fieldset>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Save</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </form>

                @*</div>*@
                <!-- Modal footer -->
            </div>
        </div>
    </div>
    <!-- end model popup -->
</div>