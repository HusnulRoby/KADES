@using KADES.Models.Pelayanan;
@model TemplateSurat

<div class="modal fade" id="updateTempSurat-@Model.ID">
    <div class="mdl modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Modal Heading</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                @*<div class="login_form">*@
                <form asp-action="UpdateTempSurat" method="POST" enctype="multipart/form-data">
                    <fieldset>
                        <input id="ID" asp-for="ID" type="hidden" />
                        <input id="CREATED_BY" asp-for="CREATED_BY" type="hidden" />
                        <input id="CREATED_DATE" asp-for="CREATED_DATE" type="hidden" />
                        <input id="FILE_NAME" asp-for="FILE_NAME" type="hidden" />
                        <input id="PATH_FILE" asp-for="PATH_FILE" type="hidden" />

                        <div class="field_form">
                            <label class="label_field  control-label">Nomor Surat</label>
                            <input id="NO_SURAT" asp-for="NO_SURAT" type="text" class="form-control form-control-sm form-control-user" />
                        </div>
                        <div class="field_form">
                            <label class="label_field  control-label">Nama Surat</label>
                            <input id="NAMA_SURAT" asp-for="NAMA_SURAT" type="text" class="form-control form-control-sm form-control-user" />
                        </div>
                        <div class="field_form">
                            <label class="label_field  control-label">Upload Surat</label>
                            <input id="FILE_UPLOAD" type="file" asp-for="PATH_FILE" name="FILE_UPLOAD" accept=".doc,.docx" class="form-control form-control-sm form-control-user" multiple />
                        </div>

                    </fieldset>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-sm btn-success">Save</button>
                        <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </form>

                @*</div>*@
                <!-- Modal footer -->
            </div>
        </div>
    </div>
    <!-- end model popup -->
</div>